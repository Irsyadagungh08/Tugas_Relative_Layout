<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Josh Hutcherson"
        android:textSize="30dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/nama1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:text="Nama"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/nama2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama2"
        android:text="Alamat"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/alamat1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alamat"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/kampus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alamat1"
        android:text="Kampus"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"/>
    <EditText
        android:id="@+id/kampus1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kampus"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <ImageView
        android:id="@+id/foto"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/foto"
        android:layout_below="@id/kampus1"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="160dp"
        android:background="@drawable/foto"
        android:layout_below="@id/kampus1"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="280dp"
        android:background="@drawable/foto"
        android:layout_below="@id/kampus1"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="KEMBALI"/>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="210dp"
        android:text="NEXT"/>

</RelativeLayout>